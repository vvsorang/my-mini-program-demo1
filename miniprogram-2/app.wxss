/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page {
  height: 100vh;
  overflow: hidden;
}
.name-item {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.name-number {
  margin-right: 10px;
  font-weight: bold;
}
.input-box-section {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
}

.input-box {
  width: 80%;
  height: 40px;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 0 10px;
}

.confirm-button {
  width: 80px;
  height: 40px;
  border: none;
  border-radius: 4px;
  background-color: #4caf50;
  color: white;
  text-align: center;
  margin-left: 10px;
}

