/* pages/first-page/first-page.wxss */
.page-background {
  background: rgba(141, 129, 129, 0.1); /* 将这个值更改为您喜欢的颜色 */
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -300;
  
}


.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 80px; /* 包括状态栏和导航栏的高度 */
  background-color: #6D8ADA;
  display: flex;
  align-items: center;
  padding-left: 10px;
  z-index: 1000;
 
}

.back-icon {
  width: 44px;
  height: 39px;
  color: white;
  margin-left: 5px;
  margin-top: 45px;
 
  
}

.navbar-title {
  font-size: 18px;
  color: white;
  margin-left: 110px;
  margin-top: 45px;
}

.rounded-rectangle {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 25%; /* 矩阵高度占屏幕的 1/4 */
  background-color: #6D8ADA; /* 蓝色背景 */
  border-radius: 0 0 30px 30px; /* 圆角仅在底部 */
  width: 100%; /* 矩阵宽度占据整个屏幕宽度 */
  z-index: -10; /* 将状态栏置于其他元素之上 */
}

.parent-container {
  background-color: #FFFFFF;
  border-radius: 20px;
  padding: 20px;
  width:80%;
  margin-left:22px;
  margin-top: 110px;
  z-index: 100; /* 确保父容器高度覆盖整个屏幕 */
}

.chart-container {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  height: 200px;
  width: 100%;
  padding: 10px;
  background-color: #ffffff;
  margin-top: 20px;
 margin-left:-5px;
  

}

.bar {
  position: relative;
  width: 50px;
  opacity: 0.5;
  background: #D8D8D8;
  border-radius: 16px;
}

.bar-selected {
  opacity: 0.5;
  background: #6D8ADA;
  border-radius: 16px;
}

.index-label {
  position: absolute;
  bottom: -30px;
  left: 5px;
  transform: translateX(0%);
  font-family: PingFangSC-Semibold;
font-size: 14px;
color: rgba(98,99,103,0.79);
letter-spacing: 0;
text-align: center;
}

.label {
  position: absolute;
  top: -20px;
  left: 30%;
  transform: translateX(-20%);
  font-family: PingFangSC-Semibold;
font-size: 13px;
color: #6D8ADA;
letter-spacing: 0;
text-align: center;
}
.text-container-1 {
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* 使文本左对齐 */
  padding-left: 10px; /* 离父容器左侧 10px */
  margin-bottom: 0px;
}


.text-1 {
  font-family: PingFangSC-Regular;
  font-size: 19px;
  color: #040404;
  letter-spacing: 0;

  margin-bottom: 20px; /* 添加间距 */
}

.text-2 {
  font-family: PingFangSC-Semibold;
  font-size: 23px;
  color: #040404;
  letter-spacing: 0;

  margin-bottom: 10px; /* 添加间距 */
}
.text-container-2 {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 40px;
  margin-left: 10px;
}

.text-3 {
  font-family: PingFangSC-Semibold;
  font-size: 15px;
  color: rgba(3, 3, 3, 0.79);
  letter-spacing: 0;
  text-align: center;
}
.scroll-view {
  height: 150px;
}

.scroll-content {
  display: flex;
  align-items: flex-start;
}

.text-4{
  opacity: 0.66;
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: rgba(3, 3, 3, 0.79);
  letter-spacing: 0;
  text-align: left;
  
}
.scroll-button {
  font-size: 20px;
  color: rgba(3, 3, 3, 0.79);
  margin-left: 10px;
  cursor: pointer;
}

.retest-button {
  background: #7199F7;
  border: 1px solid #979797;
  border-radius: 23px;
  font-family: PingFangSC-Medium;
  font-size: 20px;
  color: #FFFFFF;
  letter-spacing: 0.14px;
  margin-top: 15px;
  padding: 8px 30px;
}

.retest-button-hover {
  background-color: #5a7fd0; /* 按下时的背景颜色，稍微比默认的颜色暗一些 */
  opacity: 0.9; /* 按下时的透明度 */
}


.bottom-icons-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 18px;
}

.icon-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  width: 64px;
  height: 64px;
  border-radius: 50%; /* 圆形外框 */
}

.icon-text {
  opacity: 0.58;
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: rgba(3, 3, 3, 0.79);
  letter-spacing: 0;
  text-align: center;
  margin-top: 5px;
}