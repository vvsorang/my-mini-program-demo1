.page-background {
  background: rgba(141, 129, 129, 0.1); /* 将这个值更改为您喜欢的颜色 */
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -300;
  
}
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 80px; /* 包括状态栏和导航栏的高度 */
  background-color: rgba(133, 165, 100, 0.19); 

  display: flex;
  align-items: center;
  padding-left: 10px;
  z-index: 1000;
}


.back-icon {
  width: 44px;
  height: 39px;
  color: black;
