  margin-top: 45px;
 
  
}

.navbar-title {
  font-size: 18px;
  color: black;
  margin-left: 80px;
  margin-top: 45px;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%; 
}

.rounded-rectangle {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 32%; 
  background-color: rgba(133, 165, 100, 0.19); /* 背景色带有透明度 */
  border-radius: 0 0 0 0; 
  width: 100%; /* 矩阵宽度占据整个屏幕宽度 */
  z-index: -10; /* 将状态栏置于其他元素之上 */
  overflow: hidden; /* 隐藏超出矩形范围的图片部分 */
  display: flex;
  align-items: flex-end; /* 垂直底部对齐 */
}

.image-and-text {
  position: fixed;
  display: flex;
  margin-left:20px;
  flex-direction: column;
  align-items: flex-start; /* 左对齐 */
}

.background-image {

  width: 380px; /* 图片宽度不超过矩阵宽度 */
  /* 图片高度不超过矩阵高度 */
  object-fit: contain; /* 图片保持宽高比缩放以适应矩阵 */
  z-index: -10; /* 将状态栏置于其他元素之上 */
}
