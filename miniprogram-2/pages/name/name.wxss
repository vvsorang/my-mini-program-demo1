.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background:#f0f0f0;
  width:100%;
}

.search-section {
  margin-top:-100px;

  padding: 10px;

}

.search-input {
  width: 100%;
  height: 100%;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 0 10px;
}
.name-item {
 
  position: relative;

}

.name-number {
  margin-left: 40px; /* 距离页面左侧20px */

}

.name-list-section {
  height: 95%;
  margin-top:-20px;
  width:100%;
  overflow-y: scroll;
  background-color: #ffffff;
  padding-right: 20px; /* 添加这行以将滚动条移到右侧20px */
}
.result-button {
  position: absolute;
  margin-top:-25px;
  right: 30px;
  background-color: #7199f7;
  border-radius: 4px;
  color: #ffffff;
  font-size: 14px;
  padding: 4px 10px;
  border: none;
  transition: background-color 0.3s, color 0.3s;
}

.result-button:hover {
  background-color: #5a7bcc;
  color: #f0f0f0;
}
.delete-icon {
  width: 20px;
  height: 20px;
  margin-left: 5px;
}



.add-button-section {
  height: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-button {
  background-color: #7199f7;
  border-radius: 50%; /* 修改为 50% 以创建圆形按钮 */
  color: #ffffff;
  font-size: 30px;
  width: 35px; /* 修改宽度 */
  height: 35px; /* 修改高度 */
  line-height: 35px; /* 修改行高 */
  text-align: center;
  border: none;
  transition: 0.3s; /* 添加动态显示效果 */

}

.add-button:hover {
  transform: scale(1.1); /* 鼠标悬停时，将按钮放大为原始尺寸的 110% */
}


.bottom-placeholder {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: white;
  height: 80px;
  width: 100%;
  position: fixed;
  bottom: 20px; /* 添加这一行使其距离底部保持20px */
}
.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tab-icon {
  width: 30px;
  height: 30px;
}
.tab-text {
  margin-top: 4px;
  font-size: 12px;
}